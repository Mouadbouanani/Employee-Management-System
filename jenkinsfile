pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Mouadbouanani/Employee-Management-System.git'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build' // ou mvn clean install
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test' // ou mvn test
            }
        }
        stage('Package') {
            steps {
                sh './gradlew assemble' // ou mvn package
            }
        }
        stage('Publish to Nexus') {
            steps {
                // Script pour push vers Nexus (nécessite config auth)
                echo 'Upload to Nexus (placeholder)'
            }
        }
        stage('Deploy (optionnel)') {
            steps {
                echo 'Deploying using Docker/Kubernetes (optional)'
            }
        }
    }

    post {
        failure {
            mail to: 'mouadbouanani1@gmail.com',
                 subject: "Échec du pipeline CI/CD",
                 body: "Erreur dans le build du projet ! Vérifiez Jenkins."
        }
    }
}
